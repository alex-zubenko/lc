<div class="private-message-wrapper top">

  <div class="private-message-subject">{{ data.subject | raw }}</div>
  <div class="top-button-block">
    <a class="custom-button" title="Revenir à mes messages" href="{{ path('message_private.messages', {'user': data.currentUser.id()}) }}">Revenir à mes messages</a>
    <a  class="custom-button revert use-ajax FR" title="Répondre" href="{{ path('lc.ajax_load_private_message_form_reply', {'user' : data.message.getOwnerId(), 'top': 1, 'message' : data.message.id()})}}?subject={{ data.message.field_message_private_subject.value | raw }}">Répondre</a>
  </div>
  <div id="reply_form_private_message_top"></div>
  {% for mess in data.messages %}
    {% set author = data.participants[mess.author] %}
    <div class="pm-row">
      <div class="private-message-from">
        <div class="pm-author-name clearfix"><span>De : </span>{{author.pseudo}}</div>
        <div class="pm-date clearfix"><span>Envoyé : </span>{{ mess.created  | date('m-d-Y H:i') }}</div>
      </div>
      <div class="private-message-body">
        {{ mess.body | raw }}
      </div>
    </div>
  {% endfor %}
  <div class="pm-footer">
    <a class="custom-button" title="Revenir à mes messages" href="{{ path('message_private.messages', {'user': data.currentUser.id()}) }}">Revenir à mes messages</a>
    <a class="custom-button revert use-ajax FR" title="Répondre" href="{{ path('lc.ajax_load_private_message_form_reply', {'user' : data.message.getOwnerId(), 'message' : data.message.id()})}}?subject={{ data.message.field_message_private_subject.value | raw }}">Répondre</a>
    <div id="reply_form_private_message"></div>
  </div>
</div>

